<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CommentAuthor" parent="LabelSecondary">

    </style>

    <style name="CommentText" parent="Body">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textColorLink">@color/colorAccent</item>
    </style>

    <style name="BaseText">
        <item name="android:textColorLink">@color/white</item>
    </style>

    <style name="Header1" parent="BaseText">
        <item name="android:textSize">24sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/dark_grey</item>
    </style>

    <style name="Header2" parent="BaseText">
        <item name="android:textSize">23sp</item>
        <item name="android:textColor">@color/dark_grey</item>
    </style>

    <style name="Header3" parent="BaseText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/dark_grey</item>
    </style>

    <style name="Button" parent="BaseText">
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Label" parent="BaseText">
        <item name="android:textSize">13sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/dark_grey</item>
    </style>

    <style name="LabelSecondary" parent="BaseText">
        <item name="android:textSize">13sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/light_grey</item>
    </style>

    <style name="Body" parent="BaseText">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/dark_grey</item>
    </style>

</resources>
